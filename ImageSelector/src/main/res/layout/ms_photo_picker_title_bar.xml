<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/notice_height_size"
        android:background="@color/colorAccent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height_size"
        android:background="@color/app_theme_style_color"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/titleBarLeft"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="32dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@color/app_theme_style_color"
                android:src="@drawable/back_icon"
                android:visibility="visible" />

            <TextView
                android:id="@+id/backTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/backBtn"
                android:paddingEnd="6dp"
                android:text="返回"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rightLayout"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:visibility="visible">

            <ImageView
                android:id="@+id/gonnaBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/app_theme_style_color"
                android:clickable="true"
                android:padding="6dp"
                android:src="@drawable/back_icon"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/completeTv"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:background="@color/app_theme_style_color"
                android:clickable="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="完成(9)"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/titleBarTxt"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="visible"
            tools:text="热" />
    </RelativeLayout>

</LinearLayout>


